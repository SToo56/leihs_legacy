:ruby

  wd = current_inventory_pool.workday
  prev_open_date = wd.previous_open_date(@date)
  next_open_date = wd.next_open_date(@date)

%a.button.white{:title => _("go to today"),
:href =>  manage_daily_view_path(current_inventory_pool, :tab => params[:tab])}
  = _("Today")

%button.button.white.datepicker#datepicker{:title => _("open datepicker")}
  %input#datepicker-input.hidden-datepicker-input
  %i.fa.fa-calendar

%a.button.white{:href => manage_daily_view_path(current_inventory_pool, :date => prev_open_date, :tab => params[:tab]),
:title => l(prev_open_date, :format => :long)}
  %i.arrow.left
  = I18n.t('date.day_names')[prev_open_date.wday]

%a.button.white{:href => manage_daily_view_path(current_inventory_pool, :date => next_open_date, :tab => params[:tab]),
:title => l(next_open_date, :format => :long)}
  = I18n.t('date.day_names')[next_open_date.wday]
  %i.arrow.right
