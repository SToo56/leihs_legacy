#search
  %label.min-height-full.width-full{:title => _("Search"), :for => "search_term"}
    = form_tag(manage_search_path(current_inventory_pool), method: :post, class: ".min-height-full.row.width-full", autocomplete: :off) do
      = token_tag nil
      %input.text-ellipsis.round-borders.has-addon.width-full.padding-right-m.padding-left-s{:class => yield(:search_section), :type => "text", :id => "search_term", :name => "search_term", :placeholder => _("Search"), :"data-barcode-scanner-target" => true}
      %button.addon.transparent.padding-right-xs{:type => :submit}
        %i.fa.fa-search.icon-xxs.grey
  #search-autocomplete
