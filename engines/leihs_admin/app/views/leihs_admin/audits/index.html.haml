- content_for :title, _("Audits")

.alert.alert-warning{role: "alert"}
  %span
    = _("These audits are deprecated and no new ones are created. See ")
    %a{href: "/admin/audited/"}= "Audits"
    = "."

%form.form-inline.text-right{style: 'margin-bottom: 1em'}
  .input-group
    %input.form-control{type: 'text', name: 'search_term', value: @search_term, placeholder: _("Search..."), autocomplete: :false, autofocus: true, onfocus: "this.value = this.value;"}
  .input-group
    %input.form-control.datepicker{type: "text", name: "start_date", placeholder: _("Start date"), value: @start_date}
    .input-group-addon
      %i.fa.fa-calendar
  .input-group
    %input.form-control.datepicker{type: "text", name: "end_date", placeholder: _("End date"), value: @end_date}
    .input-group-addon
      %i.fa.fa-calendar
  %button.btn.btn-default{type: "submit"}= _("Filter")

.pages
  = render partial: 'leihs_admin/audits/audits', collection: @audits

%h1.pages-progress.text-center
  %i.fa.fa-spinner

:coffeescript
  $(document).on 'scroll', -> Pages.load_next()

  $(document).ready ->
    Pages.reset()
    $(".datepicker").datepicker({
      dateFormat: i18n.datepicker.L
    })
