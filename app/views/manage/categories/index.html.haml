-content_for :title, _("List of Categories")
-content_for :inventory_section, "active"

#categories-index-view.wrapper.margin-top-m

  = render :partial => 'manage/tabs/inventory', :locals => {:active_tab => :categories}

  .row.content-wrapper.min-height-xl.min-width-full.straight-top

    .margin-top-l.padding-horizontal-m

      .row

        %h1.headline-xl.float-left= yield :title
        %a.button.white.float-right{:href => manage_new_category_path}= _("New Category")

    .margin-top-m

      .inline-tab-navigation

        .inline-tab-item.active= _("All")

      .row.margin-vertical-xs.padding-horizontal-m

        .col1of5
          %input#list-search{type: "text", name: "input", placeholder: _("Search..."), autocomplete: :off}
        .col4of5
          %button#btn-tree-all-open.button.inset.white.height-xxs
            %i.arrow.down
            = _("Expand All")
          %button#btn-tree-all-close.button.inset.white.height-xxs
            %i.arrow.up
            = _("Close All")


    #list.margin-bottom-s.separated-top.list-of-lines.even

:coffeescript
  jQuery -> new App.CategoriesIndexController {el: $("#categories-index-view")}
